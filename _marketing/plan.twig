{%- extends "_marketing/_layout"-%}
{% html at head %}
	<title>Plans - Transformation Cook Book</title>
{% endhtml %}
{%- block main -%}

<section class="included-section mt-4">
	<div class="container">
		{{planGlobals.textEditorSimpleV2}}
		<div class="row align-items-center">
			<div class="col-md-6">
				<div class="image-include">
					{%- if planGlobals.image is not empty and planGlobals.image.one() is not null -%}
						<img src="{{planGlobals.image.one().url}}" alt="Image" class="desk-img" />
					{%- endif -%}
					{%- if planGlobals.image2 is not empty and planGlobals.image2.one() is not null -%}
						<img src="{{planGlobals.image2.one().url}}" alt="Image" class="mob-img" />
					{%- endif -%}
				</div>
			</div>
			<div class="col-md-6">
				<div class="content-include">
					{{planGlobals.textEditorFull}}
				</div>
			</div>
		</div>
	</div>
</section>

<section class="select-your-plan-section">
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="content-select-your-plan">
				<h2>Upgrade to pro!</h2>
			</div>
		</div>
	</div>
	<div class="row plan-row"> 
		<div class="col-md-6">
			<div class="round-box-annual annual-plan">
				<div class="round-box-plan">
					<p>{{planGlobals.textbox}}</p>
					<h3>{{planGlobals.textbox11}}</h3>
					<p><span>{{planGlobals.textbox2}}</span></p>
				</div>
				<div class="roundbox-content">
					<p>{{planGlobals.textbox3}}</p>
				</div>		                    
				<div class="btn-select">
					<!-- <div class="roundbox-save">
						<p>{{planGlobals.textbox4|replace({' ':'<br/>'})|raw}}</p>
					</div> -->
					<a href="/select-your-plan/paymentm?s=annually" class="defult-btn pink-bg text-uppercase">SELECT</a>
				</div>
			</div>
		</div> 

		<div class="col-md-6">
			<div class="round-box-annual">
				<div class="round-box-plan">
					<p>{{planGlobals.textbox6}}</p>
					<h3>{{planGlobals.textbox12}}</h3>
					<p><span>{{planGlobals.textbox7}}</span></p>
				</div>
				<div class="roundbox-content">
					<p>{{planGlobals.textbox8}}</p>
				</div>
					{%- if planGlobals.textbox9 is not empty -%}
						<div class="roundbox-save">
						<p>{{planGlobals.textbox9|replace({' ':'<br/>'})|raw}}</p>
					</div>
					{%-endif-%}
				<div class="btn-select">
					<a href="/select-your-plan/paymentm?s=monthly" class="defult-btn pink-bg text-uppercase">SELECT</a>
				</div>
			</div>
		</div>
	</div>
	<div class="text-center mt-lg-5 mt-4">
		<a href="/free-registration-redirect" class="defult-btn text-uppercase">NO THANKS, STAY FREEMIUM</a>
	</div>
</div>
</section>

{%- endblock -%}
{% js "/_marketing/js/general.js" %}